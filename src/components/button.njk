{% endmacro %}

{% macro primary(text, type, size = "small", class = "", id = "") %}
    {% set buttonType = type | default("button") %}
    {% set buttonSizeClass = "" %}
    {% if size === "large" %}
        {% set buttonSizeClass = "text-xl w-32 h-10" %}
    {% elseif size == "small" %}
        {% set buttonSizeClass = "h-6 w-24" %}
    {% endif %}
    {% if text === "Supprimer" %}
        {% set deleteClass = "hover:bg-red-500" %}
        {% set id = "btn-delete" %}
    {% endif %}
    <button type="{{ buttonType }}" id="{{id}}"class="flex justify-center items-center bg-gray-500 hover:bg-gray-800 text-white text-center rounded-md {{ deleteClass }} {{ buttonSizeClass }} {{ class }}">
        {{ text | safe }}
    </button>
{% endmacro %}