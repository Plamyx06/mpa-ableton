                </svg>' %}

{% macro button(text, type, class = "", svg = true) %}
    {% set buttonType = type | default("button") %}
    <button type="{{buttonType}}" class=" flex justify-center items-center bg-gray-500 h-6 w-24 text-white text-center rounded-md hover:bg-gray-800 {{ class }}">
        {{ text }}
        {% if svg %}
            {{ svgIcon | safe }}
        {% endif %}
    </button>
{% endmacro %}

{% macro buttonXl(text, type, class = "", svg = true) %}
    {% set buttonType = type | default("button") %}
    <button type="{{buttonType}}" class="flex justify-center items-center bg-gray-500 text-white text-center rounded-md hover:bg-gray-800 text-xl w-32 h-10 {{ class }}">
        {{ text }}
        {% if svg %}
            {{ svgIcon | safe }}
        {% endif %}
    </button>
{% endmacro %}