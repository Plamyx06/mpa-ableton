{% extends "src/components/_layout.njk" %}
{% import "src/components/_button.njk" as button %}
{% block head %}
    <title>Articles / Creation</title>
{% endblock %}
{% block main %}

    <div class="w-full pt-10 pl-20 pr-20">
        <div class="flex justify-center mb-20">
            <h1 class="text-4xl font-bold tracking-tight text-gray-900 pb-15">Articles / Creation</h1>
        </div>

        <div class="flex flex-col px-40">
            <div>
                <a href="/articles" class="flex items-center text-xl font-semibold mb-6">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 mr-1">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 12h-15m0 0l6.75 6.75M4.5 12l6.75-6.75"/>
                    </svg>Retour aux articles</a>
            </div>
            <form method="POST" class="space-y-4">
                <div>
                    <label for="title" class=" text-xl font-medium leading-6 text-gray-900">Titre</label>
                    <div class="mt-2">
                        <input type="text" name="title" id="title" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-gray-600">
                    </div>
                </div>

                <div>
                    <label class="mt-10 text-xl font-medium leading-6 text-gray-900">Statut :</label>
                </diV>
                <div class="flex justify-between items-center">
                    <div>
                        <input class="rounded-full text-gray-600 focus:ring-0" type="radio" id="draft" checked="checked" name="status" value="draft">
                        <label class="font-semibold" for="draft">Brouillon</label>

                        <input class="ml-20 rounded-full text-gray-600 focus:ring-0" type="radio" id="published" name="status" value="published">
                        <label class="font-semibold"for="published">Publié</label>

                    </div>
                    <div class="flex items-center">
                        <label class="mr-5 font-semibold text-xl" for="category">
                                Category :
                            </label>
                        <select class="rounded-md block rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-gray-600" name="category" id="category">
                            {% for selectCategory in category %}
                                <option value="{{ selectCategory.name }}" {% if selectCategory.name === articles[articleIndex].category %}selected{% endif %}>{{ selectCategory.name }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
                <div>
                    <label for="image" class=" text-xl font-medium leading-6 text-gray-900">Image</label>
                    <div class="mt-2">
                        <input type="text" name="image" id="image" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-gray-600">
                    </div>
                </div>
                <div>
                    <label for="content" class=" text-xl font-medium text-gray-900">Contenu</label>
                    <div class="mt-2">
                        <textarea type="text" name="content" id="content" rows="10" class="resize-none w-full block rounded-md border-0 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-gray-600"></textarea>
                    </div>
                </div>
                <div class="flex justify-end mt-20">
                    {{ button.buttonXl("Créer","submit", svg=false)}}
                </button>
                <div></form>
            </div>
        </div>
    </div>
    {% endblock%}