{% extends "src/components/_layout.njk" %}
{% import "src/components/_button.njk" as button %}

{% block main %}
    <div class="w-full pt-10 pl-20 pr-20">
        <div class="flex justify-between items-baseline mb-5">
            <h1 class="text-4xl font-bold tracking-tight text-gray-900 ">Gestion du pied de page</h1>
            <div>
                <a href="/articles" class="flex items-center text-xl font-semibold mb-6">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 mr-1">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 12h-15m0 0l6.75 6.75M4.5 12l6.75-6.75"/>
                    </svg>Retour aux articles</a>
            </div>
        </div>
        <div class="flex flex-col px-40">

            <form method="POST" action="/editFooter" class="space-y-4">

                <div class ="flex justify-between">
                    <div class="mt-2">
                        <label for="title" class="text-xl font-medium leading-6 text-gray-900">Section 1</label>
                        {% set counter = -1 %}
                        {% for footerTitle in footer.section1 %}

                            {% set counter = counter + 1 %}
                            <input type="text" name="section1Title{{ counter }}" id="Section1Title{{ counter }}" value="{{ footerTitle.title }}" class="block my-2 w-96 rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-gray-600">

                        {% endfor %}
                    </div>

                    <div class="mt-2">
                        <label for="title" class="text-xl font-medium leading-6 text-gray-900">&#8203;</label>
                        {% for svg in footer.section1 %}
                            <p class="block my-2 py-1.5 text-gray-900">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M17.25 8.25L21 12m0 0l-3.75 3.75M21 12H3"/>
                                </svg>
                            </p>
                        {% endfor %}
                    </div>
                    <div class="mt-2">
                        <label for="section1Href" class="text-xl font-medium leading-6 text-gray-900">Liens</label>
                        {% set counter = -1 %}
                        {% for footerHref in footer.section1 %}

                            {% set counter = counter + 1 %}
                            <input type="text" name="section1Href{{ counter }}" id="section1href{{ counter }}" value="{{ footerHref.href }}" class="block my-2 rounded-md w-96 border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-gray-600">

                        {% endfor %}
                    </div>
                </div>
                <div class="">
                    <div class="my-2 mr-40 flex items-center justify-center w-full border-b-2 border-gray-500"></div>
                </div>
                <div class="" >
                    <label for="title" class="text-xl font-medium leading-6 text-gray-900">Section 2
                </label>
                    <input type="text" name="mainTitle" id="mainTitle" value="{{ footer.titleSection2.mainTitle }}" class="block my-2 w-96 rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-gray-600">
                </div>
                <div class ="section2 flex justify-between">
                    <div class="mt-2">
                        <label for="title" class="text-xl font-medium leading-6 text-gray-900">&#8203;</label>
                        {% set counter = -1 %}
                        {% for footerTitle in footer.section2 %}

                            {% set counter = counter + 1 %}
                            <input type="text" name="section2Title{{ counter }}" id="section2Title{{ counter }}" value="{{ footerTitle.title }}" class="block my-2 w-96 rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-gray-600">

                        {% endfor %}
                    </div>

                    <div class="mt-2">
                        <label for="title" class="text-xl font-medium leading-6 text-gray-900">&#8203;</label>
                        {% for svg in footer.section2 %}
                            <p class="block my-2 py-1.5 text-gray-900">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M17.25 8.25L21 12m0 0l-3.75 3.75M21 12H3"/>
                                </svg>
                            </p>
                        {% endfor %}
                    </div>
                    <div class="mt-2">
                        <label for="section2Href" class="text-xl font-medium leading-6 text-gray-900">Liens</label>
                        {% set counter = -1 %}
                        {% for footerHref in footer.section2 %}

                            {% set counter = counter + 1 %}
                            <input type="text" name="section2Href{{ counter }}" id="section2Href{{ counter }}" value="{{ footerHref.href }}" class="block my-2 rounded-md w-96 border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-gray-600">

                        {% endfor %}
                    </div>
                </div>
                <div class="">
                    <div class="my-2 mr-40 flex items-center justify-center w-full border-b-2 border-gray-500"></div>
                </div>
                <div class ="social flex justify-between">
                    <div class="flex flex-col">
                        <label for="title" class="text-xl font-medium leading-6 text-gray-900 mb-4">RÃ©seaux sociaux</label>
                        {% set counter = -1 %}
                        {% for footerSocialTitle in footer.socialLink %}

                            {% set counter = counter + 1 %}
                            <input type="text" disabled id="socialTitle" name="socialTitle" class=" border-none rounded-md py-2.5 w-96 outline-none font-semibold" value="{{footerSocialTitle.title}}">

                        {% endfor %}
                    </div>

                    <div class="mt-2">
                        <label for="title" class="text-xl font-medium leading-6 text-gray-900">&#8203;</label>
                        {% for svg in footer.socialLink %}
                            <p class="block my-2 py-1.5 text-gray-900">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M17.25 8.25L21 12m0 0l-3.75 3.75M21 12H3"/>
                                </svg>
                            </p>
                        {% endfor %}
                    </div>
                    <div class="mt-2">
                        <label for="href" class="text-xl font-medium leading-6 text-gray-900">Liens</label>
                        {% set counter = -1 %}
                        {% for footerSocialHref in footer.socialLink %}

                            {% set counter = counter + 1 %}
                            <input type="text" name="socialHref{{ counter }}" id="socialHref{{ counter }}" value="{{ footerSocialHref.href }}" class="block my-2 rounded-md w-96 border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-gray-600">

                        {% endfor %}
                    </div>
                </div>
                <div class="flex justify-end items-baseline pt-5 ">
                    <div>
                        {{ button.buttonXl("md","Sauvegarder","submit", svg=false)}}
                    </div>
                </div>
            </form>
        </div>
        {% endblock%}