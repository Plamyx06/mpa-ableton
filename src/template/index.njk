{% extends "./_layout.njk" %}
{% block head %}
    <title>Tableau de bord</title>
{% endblock %}
{% block main %}
    <div class="w-full pt-10 pl-20 pr-20 ">
        <h1 class="text-4xl font-bold tracking-tight text-gray-900">Tableau de bord</h1>
        <button class="items-center pt-10 text-blue-600">
            <a href="https://ableton-dynamique.vercel.app/" target="_blank" class="inline-flex">Site web

                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 ml-2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 6H5.25A2.25 2.25 0 003 8.25v10.5A2.25 2.25 0 005.25 21h10.5A2.25 2.25 0 0018 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25"></path>
                </svg>
            </a>
        </button>

        <button class="items-center pt-10 text-blue-600 ml-20">

            <a href="https://analytics.google.com/analytics/web/#/p350515555/reports/intelligenthome" target="_blank" class="inline-flex">Analytics
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 ml-2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 6H5.25A2.25 2.25 0 003 8.25v10.5A2.25 2.25 0 005.25 21h10.5A2.25 2.25 0 0018 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25"></path>
                </svg>
            </a>
        </button>
        <h1 class="text-2xl font-bold tracking-tight text-gray-900 pt-10 pb-5">Les trois derniers articles</h1>

        {% for article in articles.slice(0, 3) %}
            <div class="flex flex-col pt-1">
                <div class="box-border p-4 border-2 border-gray-500 rounded-md">
                    <div class="flex">
                        <div>
                            <img class="w-40 h-20" src="{{article.image}}">
                        </div>
                        <div class="pl-5 pr-5 w-full">
                            <h2 class="font-medium pb-1">{{article.title}}</h2>
                            <h2>
                                <p class="inline-block text-sm bg-gray-500 text-white rounded-md pl-1 pr-1">{{article.category}}</p>

                                <div class="flex justify-between items-center ">
                                    {% if formatDate(article.updateAt, "fr") === "Invalid Date" %}
                                        <p class="font-light text-xs">dernière modification le {{formatDate(article.createdAt, "fr")}}</p>
                                    {% else %}
                                        <p class="font-light text-xs">dernière modification le {{formatDate(article.updateAt, "fr")}}</p>
                                    {% endif %}

                                    <div class="">
                                        <button class="bg-gray-500 text-white rounded-md pl-1 mr-5 hover:bg-gray-800">
                                            <a href="" class="inline-flex">
                            Publié
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 ml-2">
                                                    <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 6H5.25A2.25 2.25 0 003 8.25v10.5A2.25 2.25 0 005.25 21h10.5A2.25 2.25 0 0018 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25"></path>
                                                </svg>
                                            </a>
                                        </button>
                                        <button class="bg-gray-500 text-white rounded-md pl-1 pr-1 mr-5 hover:bg-gray-800">
                                            <a href="/articles/{{article.id}}" class="inline-flex">
                            Editer
                          </a>
                                        </button>
                                        <form method="POST" class="inline-flex" action="/delete">
                                            <input type="hidden" name="id" value="{{article.id}}">
                                            <button type="submit" value="delete" class="bg-gray-500 text-white rounded-md pl-1 pr-1 hover:bg-red-500" >Supprimer</button>
                                        </form>

                                    </div>
                                </div>
                            </h2>
                        </div>
                    </div>
                </div>

            </div>
        {% endfor %}
        <div class="pt-5">
            <a href="/articles?page=1" class="text-blue-600">
            Voir tous les articles
          </a>
            <div></div>
        </div>
    {% endblock %}
</div>